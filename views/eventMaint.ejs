<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
    <style>
        /* General reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 30px;
        }

        .event-section {
            width: 80%;
            max-width: 800px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
        }

        .event-section h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }

        /* Basic styling for the event table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        td {
            background-color: #f9f9f9;
        }

        .table-placeholder {
            height: 100px;
            background-color: #f9f9f9;
            border: 1px dashed #ccc;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #777;
            font-style: italic;
        }
    </style>
</head>
<body>
    <h1>Events</h1>

    <div class="event-section">
        <h2>Needing Update</h2>
        <% if (needingUpdate.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    <% needingUpdate.forEach(event => { %>
                        <tr>
                            <td><%= event.date %></td>
                            <td><%= event.starttime %> - <%= event.endtime %></td>
                            <td><%= event.streetaddress %>, <%= event.city %>, <%= event.state %> <%= event.zip %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="table-placeholder">No events needing updates.</div>
        <% } %>
    </div>

    <div class="event-section">
        <h2>Waiting Approval</h2>
        <% if (waitingApproval.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Event ID</th>
                        <th>Event Date</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th>Estimated Start Time</th>
                        <th>Contact Info</th>
                        <th>Approval Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% waitingApproval.forEach(event => { %>
                        <tr>
                            <td><%= event.eventid %></td>
                            <td><%= event.date %></td>
                            <td><%= event.starttime %> - <%= event.endtime %></td>
                            <td><%= event.streetaddress %>, <%= event.city %>, <%= event.state %> <%= event.zip %></td>
                            <td><%= event.eststarttime %> - <%= event.estendtime %></td>
                            <td><%= event.contactfirstname %> <%= event.contactlastname %>, <%= event.contactphonenumber %></td>
                            <td><%= event.approval ? 'Approved' : 'Pending' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="table-placeholder">No events waiting for approval.</div>
        <% } %>
    </div>

    <div class="event-section">
        <h2>Upcoming</h2>
        <% if (upcomingEvents.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    <% upcomingEvents.forEach(event => { %>
                        <tr>
                            <td><%= event.date %></td>
                            <td><%= event.starttime %> - <%= event.endtime %></td>
                            <td><%= event.streetaddress %>, <%= event.city %>, <%= event.state %> <%= event.zip %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="table-placeholder">No upcoming events.</div>
        <% } %>
    </div>

    <div class="event-section">
        <h2>Completed</h2>
        <% if (completedEvents.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Participants</th>
                    </tr>
                </thead>
                <tbody>
                    <% completedEvents.forEach(event => { %>
                        <tr>
                            <td><%= event.date %></td>
                            <td><%= event.streetaddress %>, <%= event.city %>, <%= event.state %> <%= event.zip %></td>
                            <td><%= event.numparticipants || 'Not Provided' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="table-placeholder">No completed events.</div>
        <% } %>
    </div>

    <div class="event-section">
        <h2>Denied</h2>
        <% if (deniedEvents.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Event ID</th>
                        <th>Event Date</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th>Contact Info</th>
                        <th>Approval Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% deniedEvents.forEach(event => { %>
                        <tr>
                            <td><%= event.eventid %></td>
                            <td><%= event.date %></td>
                            <td><%= event.starttime %> - <%= event.endtime %></td>
                            <td><%= event.streetaddress %>, <%= event.city %>, <%= event.state %> <%= event.zip %></td>
                            <td><%= event.contactfirstname %> <%= event.contactlastname %>, <%= event.contactphonenumber %></td>
                            <td><%= event.approval ? 'Approved' : 'Denied' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="table-placeholder">No denied events.</div>
        <% } %>
    </div>

</body>
</html>
